{
  "name": "backend",
  "version": "1.0.0",
  "type": "module",
  "main": "index.js",
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "dev": "npm run build && nodemon dist/index.js",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/index.js",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest --config jest.config.cjs",
    "architecture:test": "depcruise src --config .dependency-cruiser.cjs",
    "lint": "prettier --check \"src/**/*.{ts,js}\"",
    "lint:fix": "prettier --write \"src/**/*.{ts,js}\"",
    "format": "prettier --write \"**/*.{ts,js,json,md}\"",
    "format-check": "prettier --check \"**/*.{ts,js,json,md}\"",
    "eslint": "eslint \"src/**/*.{ts,js}\"",
    "eslint:fix": "eslint \"src/**/*.{ts,js}\" --fix",
    "quality": "npm run test && npm run architecture:test && npm run lint && npm run eslint"
  },
  "dependencies": {
    "express": "^5.1.0",
    "mysql2": "^3.14.1",
    "sqlite3": "^5.1.7",
    "uuid": "^11.1.0",
    "wait-port": "^1.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@types/express": "^5.0.6",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.3.0",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.56.0",
    "@typescript-eslint/parser": "^8.56.0",
    "dependency-cruiser": "^17.3.8",
    "eslint": "^10.0.1",
    "jest": "^29.7.0",
    "nodemon": "^3.0.3",
    "prettier": "^3.2.4",
    "supertest": "^7.2.2",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.56.0"
  }
}
