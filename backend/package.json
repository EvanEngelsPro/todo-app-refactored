{
  "name": "backend",
  "version": "1.0.0",
  "main": "index.js",
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "dev": "nodemon src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest --config jest.config.js",
    "architecture:test": "depcruise src --config .dependency-cruiser.js",
    "lint": "prettier --check \"src/**/*.{ts,js}\"",
    "lint:fix": "prettier --write \"src/**/*.{ts,js}\"",
    "format": "prettier --write \"**/*.{ts,js,json,md}\"",
    "format-check": "prettier --check \"**/*.{ts,js,json,md}\"",
    "quality": "npm run test && npm run architecture:test && npm run lint"
  },
  "dependencies": {
    "express": "^5.1.0",
    "mysql2": "^3.14.1",
    "sqlite3": "^5.1.7",
    "uuid": "^11.1.0",
    "wait-port": "^1.1.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.6",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.3.0",
    "@types/supertest": "^6.0.3",
    "dependency-cruiser": "^17.3.8",
    "jest": "^29.7.0",
    "ts-jest": "^29.4.6",
    "typescript": "^5.9.3",
    "ts-node": "^10.9.2",
    "nodemon": "^3.0.3",
    "prettier": "^3.2.4",
    "supertest": "^7.2.2"
  }
}